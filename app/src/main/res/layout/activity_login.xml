<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <ImageView
        android:layout_width="180px"
        android:layout_height="180px"
        android:layout_marginTop="82px"
        android:src="@mipmap/logo_180" />


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="90px"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginLeft="28px"
            android:src="@mipmap/phone_login" />


        <EditText
            android:id="@+id/etLoginPhone"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="40px"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center_vertical"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:textColor="#000"
            android:textColorHint="#cccccc"
            android:textSize="30px" />

    </com.zhy.autolayout.AutoLinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:background="@color/bgColor" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"

        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginLeft="28px"
            android:src="@mipmap/lock" />


        <EditText
            android:id="@+id/etLoginPsw"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="40px"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColor="#000"
            android:textColorHint="#cccccc"
            android:textSize="30px" />

    </com.zhy.autolayout.AutoLinearLayout>


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="61px"
        android:background="@color/appColor"
        android:paddingBottom="30px"
        android:paddingTop="30px"
        android:text="登录"
        android:textColor="#FFF"
        android:textSize="28px" />


    <TextView
        android:id="@+id/tvForgetPsw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="38px"
        android:layout_marginTop="30px"
        android:gravity="right"
        android:text="忘记密码?"
        android:textColor="#666666"
        android:textSize="28px" />


</LinearLayout>