<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical">


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:background="@color/appColor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的"
            android:textColor="#FFF"
            android:textSize="30px" />


        <ImageView
            android:id="@+id/ivNotification"
            android:layout_width="98px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="29px"
            android:src="@mipmap/ic_launcher_round" />

        <View
            android:id="@+id/vNotify"
            android:layout_width="10px"
            android:layout_height="10px"
            android:layout_alignRight="@+id/ivNotification"
            android:layout_alignTop="@+id/ivNotification"
            android:layout_marginRight="29px"
            android:layout_marginTop="29px"
            android:background="@drawable/shape_notify_bg" />


    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/city_bg_720">

        <ImageView
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60px"
            android:src="@mipmap/logo_person" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="60px"
            android:layout_marginTop="212px"
            android:text="万科集团"
            android:textColor="#333333"
            android:textSize="30px" />


    </com.zhy.autolayout.AutoFrameLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="5px" />



        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/llMyProject"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="#FFF"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="44px"
                android:layout_height="44px"
                android:layout_marginLeft="26px"
                android:src="@drawable/my_project_44" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24px"
                android:text="我的项目"
                android:textColor="#333333"
                android:textSize="30px" />


        </com.zhy.autolayout.AutoLinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/llMyProject"
            android:layout_marginLeft="26px"
            android:layout_marginRight="26px"
            android:background="#a7a3a3" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/llMyClient"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_below="@+id/llMyProject"
            android:layout_marginTop="1px"
            android:background="#FFF"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="44px"
                android:layout_height="44px"
                android:layout_marginLeft="26px"
                android:src="@drawable/my_client_44" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24px"
                android:text="我的客户"
                android:textColor="#333333"
                android:textSize="30px" />


        </com.zhy.autolayout.AutoLinearLayout>





    <View
        android:layout_width="match_parent"
        android:layout_height="30px" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/llSetting"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="#FFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="44px"
            android:layout_height="44px"
            android:layout_marginLeft="26px"
            android:src="@mipmap/setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:text="设置"
            android:textColor="#333333"
            android:textSize="30px" />


    </com.zhy.autolayout.AutoLinearLayout>


</LinearLayout>