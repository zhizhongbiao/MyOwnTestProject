<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:background="#fd7801">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的"
            android:textColor="#FFF"
            android:textSize="30px" />


        <ImageView
            android:id="@+id/ivNotification"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="29px"
            android:src="@mipmap/ic_launcher" />

        <View
            android:layout_width="10px"
            android:layout_height="10px"
            android:layout_alignRight="@+id/ivNotification"
            android:layout_alignTop="@+id/ivNotification"
            android:background="@drawable/shape_notify_bg" />


    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="16px"
        android:background="#f5f2f0" />

    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        
        <ImageView
            android:layout_width="120px"
            android:layout_height="120px"
            android:src="@mipmap/logo_person"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60px"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="万科集团"
            android:textColor="#1a1614"
            android:layout_marginTop="212px"
            android:layout_marginBottom="60px"
            android:textSize="30px" />


    </com.zhy.autolayout.AutoFrameLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="16px"
        android:background="#f5f2f0" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/llMyWallet"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >


        <ImageView
            android:layout_width="44px"
            android:layout_height="44px"
            android:layout_marginLeft="26px"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的钱包"
            android:textColor="#666666"
            android:layout_marginLeft="24px"
            android:textSize="30px" />




    </com.zhy.autolayout.AutoLinearLayout>




    <View
        android:layout_width="match_parent"
        android:layout_height="16px"
        android:background="#f5f2f0" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/llMyProject"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >


        <ImageView
            android:layout_width="44px"
            android:layout_height="44px"
            android:layout_marginLeft="26px"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的项目"
            android:textColor="#666666"
            android:layout_marginLeft="24px"
            android:textSize="30px" />


    </com.zhy.autolayout.AutoLinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="16px"
        android:background="#f5f2f0" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/llChangePsw"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >


        <ImageView
            android:layout_width="44px"
            android:layout_height="44px"
            android:layout_marginLeft="26px"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textColor="#666666"
            android:layout_marginLeft="24px"
            android:textSize="30px" />


    </com.zhy.autolayout.AutoLinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#f5f2f0" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/llBindPhone"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >


        <ImageView
            android:layout_width="44px"
            android:layout_height="44px"
            android:layout_marginLeft="26px"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机绑定"
            android:textColor="#666666"
            android:layout_marginLeft="24px"
            android:textSize="30px" />


    </com.zhy.autolayout.AutoLinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="16px"
        android:background="#f5f2f0" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/llSetting"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >


        <ImageView
            android:layout_width="44px"
            android:layout_height="44px"
            android:layout_marginLeft="26px"
            android:src="@mipmap/setting"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textColor="#666666"
            android:layout_marginLeft="24px"
            android:textSize="30px" />


    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#f5f2f0" />



</LinearLayout>