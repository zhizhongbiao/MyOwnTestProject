<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"

    android:orientation="vertical">


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:background="#fd7801">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的"
            android:textColor="#FFF"
            android:textSize="30px" />


        <ImageView
            android:id="@+id/ivNotification"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="29px"
            android:src="@mipmap/ic_launcher_round" />

        <View
            android:layout_width="10px"
            android:layout_height="10px"
            android:layout_alignRight="@+id/ivNotification"
            android:layout_alignTop="@+id/ivNotification"
            android:background="@drawable/shape_notify_bg" />


    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="16px"
        android:background="#f5f2f0" />

    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/city_bg_720">

        <ImageView
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60px"
            android:src="@mipmap/logo_person" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="60px"
            android:layout_marginTop="212px"
            android:text="万科集团"
            android:textColor="#333333"
            android:textSize="30px" />


    </com.zhy.autolayout.AutoFrameLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="21px"
        android:background="@color/bgColor" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/llMyProject"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="#FFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="44px"
            android:layout_height="44px"
            android:layout_marginLeft="26px"
            android:src="@drawable/my_project_44" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:text="我的项目"
            android:textColor="#333333"
            android:textSize="30px" />


    </com.zhy.autolayout.AutoLinearLayout>




    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/llMyClient"
        android:background="#FFF"
        android:layout_marginTop="1px"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="44px"
            android:layout_height="44px"
            android:layout_marginLeft="26px"
            android:src="@drawable/my_client_44" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:text="我的客人"
            android:textColor="#333333"
            android:textSize="30px" />


    </com.zhy.autolayout.AutoLinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="30px"
        />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/llSetting"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="#FFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="44px"
            android:layout_height="44px"
            android:layout_marginLeft="26px"
            android:src="@mipmap/setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:text="设置"
            android:textColor="#333333"
            android:textSize="30px" />


    </com.zhy.autolayout.AutoLinearLayout>



</LinearLayout>